#!/usr/bin/env bash

echo "Cloning GitHub projects ..."

projects=( website textarea-auto-expand CustomBadge featured-carousel lightbox2 browser-bug-reports exercism node-hello-world )

for project in "${projects[@]}"; do
  git clone "https://github.com/javierjulio/$project.git" "$HOME/Projects/$project"
done

git clone https://github.com/9mmedia/charcutio-web.git ~/Projects/charcutio-web
